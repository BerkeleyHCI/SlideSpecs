#!/usr/bin/env bash

# convert-pdf [file.pdf] [/out/dir]

# requirements
# convert -- brew install imagemagick

# todo - make the name-saved-as more unique

full=$(basename -- "$1")
base="${full%.*}"
extn="${full##*.}"
convert -density 100 "$1" "$2/$base-%04d.jpg"
find "$2" -type f -iname "*$base*jpg"
echo "convert-pdf complete: $1"
exit 0

# x600\> "$full"
